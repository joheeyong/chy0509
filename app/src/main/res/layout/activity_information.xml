<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgbutton1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="@drawable/map" />


        <ImageButton
            android:id="@+id/imgbutton2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="@drawable/random" />

        <ImageButton
            android:id="@+id/imgbutton6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="@drawable/call" />


        <ImageButton
            android:id="@+id/imgbutton4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="@drawable/information" />


        <ImageButton
            android:id="@+id/imgbutton5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="@drawable/crown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/img10"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:foreground="@drawable/bo"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/img11"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:foreground="@drawable/gksthx"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/img12"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:foreground="@drawable/kfc"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/img13"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:foreground="@drawable/moms"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/img14"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:foreground="@drawable/piz"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/img15"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:foreground="@drawable/nol"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/img16"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:foreground="@drawable/jjang"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/img17"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:foreground="@drawable/tlswjs"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="visible" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>